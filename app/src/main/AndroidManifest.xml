<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.checkbit.sia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SiaDashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CharismaQuestsActivity"
            android:label="@string/title_activity_charisma_quests"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.CharismaQuestsService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.TodoActivity"
            android:label="@string/title_activity_todo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddTodoActivity"
            android:label="@string/title_activity_add_todo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.TodoDetailActivity"
            android:label="@string/title_activity_todo_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
